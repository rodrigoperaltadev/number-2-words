{
  "name": "@easii/number-2-words",
  "version": "1.0.2",
  "description": "Convert numbers into words in English and Spanish",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "vitest",
    "lint": "biome check ./src",
    "format": "biome format ./src --write"
  },
  "keywords": [
    "numbers",
    "words",
    "typescript",
    "i18n",
    "localization"
  ],
  "author": "Rodrigo Peralta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodrigoperaltadev/number-2-words.git"
  },
  "bugs": {
    "url": "https://github.com/rodrigoperaltadev/number-2-words/issues"
  },
  "homepage": "https://github.com/rodrigoperaltadev/number-2-words#readme",
  "readme": "README.md",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
